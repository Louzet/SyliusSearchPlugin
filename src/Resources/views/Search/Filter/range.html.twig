<div class="item">
    <div class="filter-item" id="{{ 'filter-' ~ filter.code }}">
        <div class="ui teal ribbon label">{{ filter.label | trans }}</div>
        <div class="filter-values" style="width: 100%">

            {% for value in filter.values %}
                {% set valueType = filter.valueType(value.label) %}
                {% set inputValue = value.isApplied ? value.value : '' %}
                {% set placeholderValue = value.isApplied ? filter.defaultValue(valueType) : value.value %}
                <div class="filter-value" style="margin-top: 10px;">
                    <label for="{{ 'filter-' ~ filter.code ~ '-' ~ valueType}}" style="margin-bottom: 5px;display: block;">{{ value.label | trans }}</label>
                    <div class="ui labeled input">
                        <div class="ui label">{{ currencySymbol }}</div>
                        <input type="number" id="{{ 'filter-' ~ filter.code ~ '-' ~ valueType}}" name="{{ filter.code ~ '[' ~ valueType ~ ']'}}" value="{{ inputValue }}" placeholder="{{ placeholderValue }}">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
